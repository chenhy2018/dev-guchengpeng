#!/bin/bash

confFile=$HOME/.qcheckout

if [ ! -e "$confFile" ]
then
        echo -e '\033[31mno config file.run your qcheckout first!\033[0m'
	exit
fi

opRoot=`cat $confFile | grep -e '/op$'`

cd $opRoot/qboxserver

if [ ! -e "$GOOS" ]
then
  GOOS=darwin
fi

if [ ! -e "$GOARCH" ]
then
  GOARCH=amd64
fi

rm -rf $GOROOT"/pkg/"$GOOS"_"$GOARCH/qbox.us/*

./server.build
./server.pack

